<?xml version="1.0"?>
<robot name="create_3">


    <!-- Robot's base link (cylindrical) -->
    <link name="cpsl_human_movement/base_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <!-- TurtleBot4 -->
                <cylinder radius="0.171" length="0.192"/>
            </geometry>
            <material name="white">
                <color rgba="1.0 1.0 1.0 0.5"/>
            </material>
        </visual>
    </link>

    <!-- Lidar link (Livox Mid360) -->
    <link name="cpsl_human_movement/livox_frame">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <!-- Livox Mid360 -->
                <cylinder radius="0.0385" length="0.081"/>
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 0.5"/>
            </material>
        </visual>
    </link>

    <!-- Fixed joint to attach lidar to base_link -->
    <joint name="lidar_joint" type="fixed">
        <origin xyz="-0.08152 0.038 0.11330" rpy="0.0 0.0 0.0"/>
        <parent link="cpsl_human_movement/base_link"/>
        <child link="cpsl_human_movement/livox_frame"/>
    </joint>

    <!-- Radar 0 link (front radar)-->
    <link name="cpsl_human_movement/radar_0">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.0005 0.02 0.05"/>
            </geometry>
            <material name="red">
                <color rgba="1.0 0.0 0.0 1.0"/>
            </material>
        </visual>
    </link>

    <!-- Fixed joint to attach radar to base_link -->
    <joint name="radar_0_joint" type="fixed">
        <origin xyz="0.147 0.0 0.11" rpy="0.0 0.0 -1.57079633"/>
        <parent link="cpsl_human_movement/base_link"/>
        <child link="cpsl_human_movement/radar_0"/>
    </joint>

    <!-- Radar 1 link -->
    <link name="cpsl_human_movement/radar_1">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.0005 0.02 0.05"/>
            </geometry>
            <material name="red">
                <color rgba="1.0 0.0 0.0 1.0"/>
            </material>
        </visual>
    </link>

    <!-- Fixed joint to attach radar to base_link -->
    <joint name="radar_1_joint" type="fixed">
        <origin xyz="-0.147 0.0 0.11" rpy="0.0 0.0 1.57079633"/>
        <parent link="cpsl_human_movement/base_link"/>
        <child link="cpsl_human_movement/radar_1"/>
    </joint>

    <!-- Radar 0 link (front radar)-->
    <link name="cpsl_human_movement/leap_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.0005 0.02 0.05"/>
            </geometry>
            <material name="red">
                <color rgba="1.0 0.0 0.0 1.0"/>
            </material>
        </visual>
    </link>

    <!-- Fixed joint to attach radar to base_link (back center of leap motion)-->
    <joint name="leap_joint" type="fixed">
        <origin xyz="-0.0171 0.132 0.05900" rpy="0.0 3.141592654 -1.57079633"/>
        <parent link="cpsl_human_movement/base_link"/>
        <child link="cpsl_human_movement/leap_link"/>
    </joint>

    <!-- Realsense link center front of realsense-->
    <link name="cpsl_realsense_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.0005 0.02 0.05"/>
            </geometry>
            <material name="red">
                <color rgba="1.0 0.0 0.0 1.0"/>
            </material>
        </visual>
    </link>

    <!-- Fixed joint to attach radar to base_link -->
    <joint name="realsense_joint" type="fixed">
        <origin xyz="-0.048 0.131 0.0115" rpy="0.0 0.0 0.0"/>
        <parent link="cpsl_human_movement/base_link"/>
        <child link="cpsl_realsense_link"/>
    </joint>

</robot>
